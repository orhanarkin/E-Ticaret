@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

@section Scripts {
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="/adminTemp/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="/adminTemp/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="/adminTemp/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="/adminTemp/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="/adminTemp/css/style.css" rel="stylesheet">
    <link href="/adminTemp/css/style-responsive.css" rel="stylesheet" />
}

<form class="login-form" asp-controller="Account" asp-action="Login" method="post">
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock_alt"></i></p>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Email" value="@Model.Email" class="form-control" placeholder="Username" autofocus>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="Password">
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş Yap</button>
        </div>
    </form>


