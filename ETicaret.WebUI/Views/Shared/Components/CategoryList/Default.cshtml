@model CategoryListViewModel

    <div class="list-group">
        @foreach (var kategori in Model.KategoriList)
        {
            <a
               asp-controller="Home"
               asp-action="List"
               asp-route-category="@kategori.KategoriAdi.ToLower()"
               class="list-group-item list-group-item-action @(Model.SelectedCategory==kategori.KategoriAdi.ToLower()?"active":"")">
                @kategori.KategoriAdi
            </a>
        }

    </div>