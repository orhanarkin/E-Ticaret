@model TblUrunler

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.Resim1" alt="@Model.UrunAdi" />
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.UrunAdi</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i> @Model.Fiyat
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Detay</a>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button  class="btn btn-outline-primary btn-sm ml-3" type="submit">Sepete Ekle</button>
                </form>
            }
        </div>
    </div>
</div>