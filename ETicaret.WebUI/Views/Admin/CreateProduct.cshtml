@model ProductModel
@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i>Ürün Yönetimi</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a asp-controller="Admin" asp-action="Index">Anasayfa</a></li>
                <li><i class="icon_document_alt"></i>Ürün Yönetimi</li>
                <li><i class="fa fa-file-text-o"></i><a asp-controller="Admin" asp-action="CreateProduct">Ürün Ekle</a></li>
            </ol>
        </div>
    </div>


<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="CreateProduct" method="post">
            <div class="form-group row">
                <label asp-for="UrunAdi" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="UrunAdi" value="@Model.UrunAdi" class="form-control" />
                    <span asp-validation-for="UrunAdi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="KategoriId" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="KategoriId" value="@Model.KategoriId" class="form-control" />
                    <span asp-validation-for="KategoriId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MarkaId" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="MarkaId" value="@Model.MarkaId" class="form-control" />
                    <span asp-validation-for="MarkaId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Resim1" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Resim1" value="@Model.Resim1" class="form-control" />
                    <span asp-validation-for="Resim1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Fiyat" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Fiyat" value="@Model.Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="KisaAciklama" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="KisaAciklama" value="@Model.KisaAciklama" class="form-control" />
                    <span asp-validation-for="KisaAciklama" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Aciklama" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea class="form-control" asp-for="Aciklama" id="editor">@Model.Aciklama</textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>