@model CategoryModel
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i>Kategori Yönetimi</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a asp-controller="Admin" asp-action="Index">Anasayfa</a></li>
                <li><i class="icon_document_alt"></i>Kategori Yönetimi</li>
                <li><i class="fa fa-file-text-o"></i><a asp-controller="Admin" asp-action="EditCategory">Kategori Düzenle</a></li>
            </ol>
        </div>
    </div>


<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="EditCategory" method="post">
            <div class="form-group row">
                <label asp-for="KategoriAdi" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="KategoriAdi" value="@Model.KategoriAdi" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>